@{
    ViewData["Title"] = "RegistrationOrg";
}

<h2>Tapk Organizatorium</h2>

<form action="@Url.Action("SaveRegistration", "Home")" method="post">
    <div class="mb-3">
        <label for="name" class="form-label">Vardas</label>
        <input type="text" class="form-control" id="name" name="name" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">El. paštas</label>
        <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Telefonas</label>
        <input type="tel" class="form-control" id="phone" name="phone" required>
    </div>

    <button type="submit" class="btn btn-primary">Išsaugoti</button>
    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index", "Home")'">Atgal</button>
</form>
